generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String?
  posts    Post[]
  opinions Opinion[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id])
}

enum Role {
  CONTRATISTA
  ADMIN
  ALUMNO
  PROFESOR
  COORDINADOR
  MANAGER
}

model Opinion {
  id       Int     @id @default(autoincrement())
  nombre   String
  empresa  String?
  opinion  String
  rate     Float
  fecha    String
  verified Boolean @default(false)
  link     String
  avatar   String
  tipo     Role    @default(ALUMNO)
  authorId Int?
  author   User?   @relation(fields: [authorId], references: [id])
}
